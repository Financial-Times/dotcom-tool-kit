{
  "name": "dotcom-tool-kit",
  "version": "0.0.0-development",
  "description": "modern, maintainable, modular developer tooling for FT.com projects",
  "author": "FT.com Platforms Team <platforms-team.customer-products@ft.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/financial-times/dotcom-tool-kit.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/financial-times/dotcom-tool-kit",
  "bugs": "https://github.com/financial-times/dotcom-tool-kit/issues",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "dotcom-tool-kit": "./bin/run"
  },
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "TS_NODE_PROJECT=\"tsconfig.json\" mocha -r ts-node/register \"./test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "devDependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/test": "1.2.8",
    "@types/mocha": "^8.2.1",
    "@types/node": "^10.17.54",
    "@types/node-fetch": "^2.5.8",
    "chai": "^4.3.0",
    "eslint": "^5.16.0",
    "eslint-config-oclif": "^3.1.0",
    "eslint-config-oclif-typescript": "^0.1.0",
    "globby": "^10.0.2",
    "mocha": "^8.3.0",
    "nock": "^13.0.7",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.9"
  },
  "dependencies": {
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-help": "^3.2.2",
    "node-fetch": "^2.6.1",
    "@dotcom-tool-kit/oclif-plugin-app-plugins": "file:../oclif-plugin-app-plugins",
    "tslib": "^1.14.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "oclif": {
    "commands": "./lib/commands",
    "bin": "dotcom-tool-kit",
    "plugins": [
      "@oclif/plugin-help",
      "@dotcom-tool-kit/oclif-plugin-app-plugins"
    ],
    "appPlugins": {
      "prefix": "@dotcom-tool-kit/"
    }
  }
}
